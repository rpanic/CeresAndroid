<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:id="@+id/bottom" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true" android:orientation="horizontal">
        <Button android:id="@+id/btn_test1" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/btn1_start" android:layout_weight="1.0" />
        <Button android:id="@+id/btn_test2" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/btn2_start" android:layout_weight="1.0" />
    </LinearLayout>

    <TextView android:textSize="14.5sp" android:textColor="#ff0000" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Log" />

    <ScrollView android:id="@+id/logView" android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/log" android:layout_width="match_parent" android:layout_height="match_parent" />

    </ScrollView>
</LinearLayout>
