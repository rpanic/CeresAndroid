<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="10"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="5"
        android:shape="ring"
        android:thicknessRatio="10"
        android:useLevel="false" >
        <size
            android:height="36dip"
            android:width="36dip" />

        <gradient
            android:centerColor="@color/purpleLight"
            android:centerY="0.50"
            android:endColor="@color/purpleDark"
            android:startColor="@color/purpleMedium"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>